<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingRight="30dp"
    android:paddingLeft="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameupdate"
        android:textSize="18sp"
        android:backgroundTint="@color/Theme"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idupdate"
        android:textSize="18sp"
        android:backgroundTint="@color/Theme"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailupdate"
        android:textSize="18sp"
        android:backgroundTint="@color/Theme"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Test 1 :"
            android:textColor="@color/Theme"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <EditText
            android:layout_marginLeft="10sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/ct1update"
            android:hint="ct1"
            android:textSize="18sp"
            android:backgroundTint="@color/Theme"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Test 2 :"
            android:textColor="@color/Theme"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <EditText
            android:layout_marginLeft="10sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/ct2update"
            android:hint="ct2"
            android:textSize="18sp"
            android:backgroundTint="@color/Theme"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Test 3 :"
            android:textColor="@color/Theme"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <EditText
            android:layout_marginLeft="10sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/ct3update"
            android:hint="ct3"
            android:textSize="18sp"
            android:backgroundTint="@color/Theme"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attendance Mark   :"
            android:textColor="@color/Theme"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/attendanceupdate"
            android:textSize="18sp"
            android:hint="attendance"
            android:backgroundTint="@color/Theme"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presentation Mark :"
            android:textColor="@color/Theme"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/presentupdate"
            android:textSize="18sp"
            android:hint="presentation"
            android:backgroundTint="@color/Theme"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment Mark   :"
            android:textColor="@color/Theme"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/assignmentupdate"
            android:textSize="18sp"
            android:hint="assignment"
            android:backgroundTint="@color/Theme"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mid Term Mark       :"
            android:textColor="@color/Theme"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/midupdate"
            android:textSize="18sp"
            android:hint="mid"
            android:backgroundTint="@color/Theme"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Final Term Mark     :"
            android:textColor="@color/Theme"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/finalupdate"
            android:textSize="18sp"
            android:hint="final"
            android:backgroundTint="@color/Theme"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/cancelupdate"
            android:background="@color/Theme"
            android:textAllCaps="false"/>

        <Button
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveupdate"
            android:textColor="@color/White"
            android:background="@color/Theme"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Save"
            android:textAllCaps="false"/>

    </LinearLayout>


</LinearLayout>