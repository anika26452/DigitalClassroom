<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".CourseUpdateFragment">

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Course title"
        android:backgroundTint="@color/Theme"
        android:textSize="18sp"
        android:cursorVisible="true"
        android:inputType="text"
        android:textCursorDrawable="@null"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Course code (cse-123)"
        android:backgroundTint="@color/Theme"
        android:textSize="18sp"
        android:cursorVisible="true"
        android:inputType="text"
        android:textCursorDrawable="@null"
        android:layout_marginBottom="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter room no."
            android:backgroundTint="@color/Theme"
            android:textSize="18sp"
            android:cursorVisible="true"
            android:inputType="text"
            android:textCursorDrawable="@null"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/tdaysupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Total num. of class day"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/Theme"
            android:textSize="18sp"
            android:cursorVisible="true"
            android:inputType="number"
            android:textCursorDrawable="@null"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/sdateupdateedittext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Theme"
            android:cursorVisible="true"
            android:hint="Start date"
            android:inputType="text"
            android:textCursorDrawable="@null"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/sdateupdatebutton"
            android:layout_width="35dp"
            android:layout_height="41dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/calendar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edateupdateedittext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/Theme"
            android:cursorVisible="true"
            android:hint="End date"
            android:inputType="text"
            android:textCursorDrawable="@null"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/edateupdatebutton"
            android:layout_width="35dp"
            android:layout_height="41dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/calendar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/stimeupdateedittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/Theme"
                android:cursorVisible="true"
                android:hint="Start time "
                android:inputType="text"
                android:textCursorDrawable="@null"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/stimeupdatebutton"
                android:layout_width="35dp"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_watch_later_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etimeupdateedittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/Theme"
                android:cursorVisible="true"
                android:hint="End time   "
                android:inputType="text"
                android:textCursorDrawable="@null"
                android:textSize="18sp"
                android:layout_marginLeft="10dp" />

            <ImageView
                android:id="@+id/etimeupdatebutton"
                android:layout_width="35dp"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_watch_later_black_24dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="Choose days"
            android:id="@+id/daysupdate"/>

        <ImageView
            android:id="@+id/dropdownupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:src="@drawable/dropdownarrow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <Button
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@color/Theme"
            android:id="@+id/cancel"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@color/Theme"
            android:id="@+id/update"
            />

    </LinearLayout>



</LinearLayout>